generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cart {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  quantity Int
  userId   String    @unique @db.ObjectId
  product  Product[]
}

type Product {
  id          String      @map("_id")
  createdAt   String
  description String
  images      String[]
  name        String
  price       Int
  quantity    Int
  rating      rate
  slugname    String
  subCategory subCategory
  category    category
  thumbnail   String
  updatedAt   String
  version     Int         @map("__v")
}

type rate {
  rate  Int
  count Int
}

type subCategory {
  id        String @map("_id")
  category  String
  name      String
  createdAt String
  updatedAt String
  slugname  String
  version   Int    @map("__v")
}

type category {
  id        String @map("_id")
  name      String
  icon      String
  createdAt String
  updatedAt String
  slugname  String
  version   Int    @map("__v")
}
